{
    "version": 2,
    "builds": [
        {
            "src": "KopiBudget.Ui/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/kopi-budget.ui",
                "buildCommand": "cd KopiBudget.Ui && npm install && npm run build"
            }
        }
    ],
    "routes": [
        {
            "source": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
